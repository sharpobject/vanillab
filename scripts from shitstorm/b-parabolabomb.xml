<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "http://www.asahi-net.or.jp/~cs8k-cyu/bulletml/bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

	<action label="top">
		<wait>10+$rand*50</wait>
		<repeat>
			<times>40</times>
			<action>
				<fire>
					<direction type="absolute">-90+$rand*180</direction>
					<speed type="absolute">5+$rand*8</speed>
					<bullet>
						<action>
							<accel>
								<vertical>-1000</vertical>
								<term>6000</term>
							</accel>
						</action>
					</bullet>
				</fire>
			</action>
		</repeat>
		<vanish/>
	</action>

</bulletml>
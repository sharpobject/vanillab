<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "http://www.asahi-net.or.jp/~cs8k-cyu/bulletml/bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

	<action label="top">
		<changeSpeed>
			<speed>0</speed>
			<term>2+$rand*26</term>
		</changeSpeed>
		<wait>30</wait>
		<changeDirection>
			<direction type="absolute">180</direction>
			<term>40</term>
		</changeDirection>
		<wait>4</wait>
		<changeSpeed>
			<speed>3</speed>
			<term>4</term>
		</changeSpeed>
		<wait>120</wait>
		<changeDirection>
			<direction type="absolute">135+$rand*90</direction>
			<term>10</term>
		</changeDirection>
		<wait>20</wait>
	</action>

</bulletml>